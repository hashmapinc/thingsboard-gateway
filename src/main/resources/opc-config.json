{
  "servers": [
    {
      "applicationName": "Tempus OPC-UA client",
      "applicationUri": "",
      "port": 49320,
      "scanPeriodInSeconds": 10,
      "timeoutInMillis": 5000,
      "security": "Basic128Rsa15",
      "identity": {
        "type": "anonymous"
      },
      "keystore": {
        "type": "PKCS12",
        "location": "example.pfx",
        "fileContent": "",
        "password": "secret",
        "alias": "gateway",
        "keyPassword": "password"
      },
      "mapping": [
        {
          "deviceNodePattern": "Channel1\\.Device\\d+$",
          "deviceNamePattern": "Device ${_System._DeviceId}",
          "attributes": [
            {
              "key": "Tag1",
              "type": "string",
              "value": "${Tag1}"
            }
          ],
          "timeseries": [
            {
              "key": "Tag2",
              "type": "long",
              "value": "${Tag2}"
            }
          ]
        }
      ]
    }
  ]
}